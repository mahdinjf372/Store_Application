@using EndPoint.WebSite.Models.Components.Slider_Products
@using Store_Application.Common.Extentions
@model IEnumerable<SliderProductViewModel>

<div class="col-lg-9 col-md-9 col-xs-12 pr order-1 d-block">
    <div class="slider-widget-products">
        <div class="widget widget-product card">
            <header class="card-header">
                <span class="title-one mr-3">@ViewBag.SliderTitle</span>
                <h3 class="card-title"></h3>
            </header>
            <div class="product-carousel owl-carousel owl-theme owl-rtl owl-loaded owl-drag">
                <div class="owl-stage-outer">
                    <div class="owl-stage" style="transform: translate3d(0px, 0px, 0px); transition: all 0s ease 0s; width: 2234px;">

                        @foreach (var slide in Model)
                        {
                            <div class="owl-item active" style="width: 309.083px; margin-left: 10px;">
                                <div class="item">
                                    <a href="/Products/@slide.Id" class="d-block hover-img-link">
                                        <img src="/images/page-single-product/product-img/@slide.ImageName" class="img-fluid" alt="@slide.Title">
                                    </a>
                                    <h2 class="post-title">
                                        <a href="/Products/@slide.Id">
                                            @slide.Title
                                        </a>
                                    </h2>
                                    <div class="price">
                                        <del><span>@slide.Price.FixedToView()<span> تومان</span></span></del>
                                        <ins><span>@(slide.PriceWithDiscount.FixedToView())<span> تومان</span></span></ins>
                                    </div>
                                </div>
                            </div>
                        }

                    </div>
                </div>
                <div class="owl-nav">
                    <button type="button" role="presentation" class="owl-prev disabled">
                        <i class="fa fa-angle-right"></i>
                    </button>
                    <button type="button" role="presentation" class="owl-next">
                        <i class="fa fa-angle-left"></i>
                    </button>
                </div>
                <div class="owl-dots disabled"></div>
            </div>
        </div>
    </div>
</div>
