@using EndPoint.WebSite.Models.Components.Slider_Main
@model IEnumerable<MainSlideViewModel>
@{
    bool i = true;
    bool j = true;
}

<div class="col-lg-8 col-xs-12 pr">
    <div class="slider-main-container d-block">
        <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
            <ol class="carousel-indicators">

                @foreach (var slide in Model)
                {
                    <li data-target="#carouselExampleIndicators" data-slide-to="@slide.Id" @((i) ? "class=\"active\"" : "")></li>
                    i = false;
                }

            </ol>
            <div class="carousel-inner">
                @foreach (var slide in Model)
                {
                    <div class="carousel-item @((j)?"active":"")">
                        <img src="/images/slider-main/@slide.ImageName" class="d-block w-100" alt="@slide.Title">
                    </div>
                    j = false;
                }
            </div>
            <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                <span class="fa fa-angle-left" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                <span class="fa fa-angle-right" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
    </div>
</div>

