@model EndPoint.WebSite.Models.Authentication.PasswordForget.PasswordForgetViewModel
@{
    Layout = null;
    ViewData["Title"] = "فراموشی رمزعبور |‌ فروشگاه اینترنتی هگز مارکت";
}

<!DOCTYPE html>
<html lang="fa" dir="rtl">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <!-- font---------------------------------------->
    <link rel="stylesheet" href="~/css/vendor/font-awesome.min.css">
    <link rel="stylesheet" href="~/css/vendor/materialdesignicons.css">
    <!-- plugin-------------------------------------->
    <link rel="stylesheet" href="~/css/vendor/bootstrap.css">
    <link rel="stylesheet" href="~/css/vendor/owl.carousel.min.css">
    <link rel="stylesheet" href="~/css/vendor/noUISlider.min.css">
    <!-- main-style---------------------------------->
    <link rel="stylesheet" href="~/css/main.css">
</head>
<body>

    <div class="container">
        <div class="row">
            <div class="col-lg">
                <section class="page-account-box">
                    <div class="col-lg-6 col-md-6 col-xs-12 mx-auto">
                        <div class="ds-userlogin">
                            <a href="#" class="account-box-logo">digismart</a>
                            <div class="account-box">
                                <div class="Login-to-account mt-1">
                                    <div class="account-box-content">
                                        <h4 class="mb-2">فراموشی گذرواژه</h4>
                                        <p>گذرواژه خود را فراموش کرده اید؟ ایمیل خود را وارد کنید.</p>
                                        <form asp-controller="Authentication" asp-action="PasswordForget" class="form-account text-right">
                                            <div asp-validation-summary="ModelOnly"></div>
                                            <div class="form-account-title">
                                                <label asp-for="Email" for="email-phone">ایمیل</label>
                                                <span asp-validation-for="Email" class="text-danger"></span>
                                                <input asp-for="Email" type="text" class="number-email-input" id="email-phone">
                                            </div>
                                            <div class="form-row-account">
                                                <button class="btn btn-primary btn-login"> ارسال ایمیل بازیابی </button>
                                            </div>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </section>
            </div>
        </div>
    </div>

    <!-- scroll_Progress------------------------->
    <div class="progress-wrap">
        <svg class="progress-circle svg-content" width="100%" height="100%" viewBox="-1 -1 102 102">
            <path d="M50,1 a49,49 0 0,1 0,98 a49,49 0 0,1 0,-98" />
        </svg>
    </div>
    <!-- scroll_Progress------------------------->

</body>
<!-- file js---------------------------------------------------->
<script src="~/js/vendor/jquery-3.2.1.min.js"></script>
<script src="~/js/vendor/bootstrap.js"></script>
<!-- plugin----------------------------------------------------->
<script src="~/js/vendor/owl.carousel.min.js"></script>
<script src="~/js/vendor/jquery.countdown.js"></script>
<script src="~/js/vendor/ResizeSensor.min.js"></script>
<script src="~/js/vendor/theia-sticky-sidebar.min.js"></script>
<script src="~/js/vendor/wNumb.js"></script>
<script src="~/js/vendor/nouislider.min.js"></script>
<!-- main js---------------------------------------------------->
<script src="~/js/main.js"></script>
@{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}
</html>
