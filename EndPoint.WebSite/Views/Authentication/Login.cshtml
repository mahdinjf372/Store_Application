
@model EndPoint.WebSite.Models.Authentication.Login.LoginViewModel
@{
    ViewData["Title"] = "ورود به حساب |‌ فروشگاه اینترنتی هگز مارکت";
    Layout = null;
}

<!DOCTYPE html>
<html lang="fa" dir="rtl">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <!-- font---------------------------------------->
    <link rel="stylesheet" href="~/css/vendor/font-awesome.min.css">
    <link rel="stylesheet" href="~/css/vendor/materialdesignicons.css">
    <!-- plugin-------------------------------------->
    <link rel="stylesheet" href="~/css/vendor/bootstrap.css">
    <link rel="stylesheet" href="~/css/vendor/owl.carousel.min.css">
    <link rel="stylesheet" href="~/css/vendor/noUISlider.min.css">
    <!-- main-style---------------------------------->
    <link rel="stylesheet" href="~/css/main.css">
</head>
<body>

    <div class="container">
        <div class="row">
            <div class="col-lg">
                <section class="page-account-box">
                    <div class="col-lg-6 col-md-6 col-xs-12 mx-auto">
                        <div class="ds-userlogin">
                            <a href="/" class="account-box-logo">digismart</a>
                            <div class="account-box">
                                <div class="account-box-headline">
                                    <a class="login-ds active">
                                        <span class="title">ورود</span>
                                        <span class="sub-title">به هگز مارکت</span>
                                    </a>
                                    <a asp-action="Register" class="register-ds">
                                        <span class="title">ثبت نام</span>
                                        <span class="sub-title">در هگز مارکت</span>
                                    </a>
                                </div>
                                <div class="Login-to-account mt-2">
                                    <div class="account-box-content">
                                        <h4>ورود به حساب کاربری</h4>
                                        <div class="d-block"></div>
                                        @if (ViewBag.IncorrectInformation != null)
                                        {
                                            <span class="text text-center text-danger"> اطلاعات وارد شده صحیح نمی باشد </span>
                                        }
                                        @if (ViewBag.IsAccountActive != null)
                                        {
                                            <span class="text text-center text-danger"> حساب کاربری شما هنوز فعال نشده است </span>
                                        }
                                        <form asp-controller="Authentication" asp-action="Login" class="form-account text-right" method="post">
                                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                            <input type="hidden" value="@ViewData["ReturnUrl"]" name="ReturnUrl" />
                                            <div class="form-account-title">
                                                <label asp-for="Email" for="email-phone">ایمیل</label>
                                                <input asp-for="Email" type="text" class="number-email-input" id="email-phone">
                                                <span asp-validation-for="Email" class="text-danger"></span>
                                            </div>
                                            <div class="form-account-title">
                                                <label asp-for="Password" for="password">رمز عبور</label>
                                                <a asp-controller="Authentication" asp-action="PasswordForget" class="account-link-password">رمز خود را فراموش کرده ام</a>
                                                <input asp-for="Password" type="password" class="password-input">
                                                <span asp-validation-for="Password" class="text-danger"></span>
                                            </div>
                                            <div class="form-auth-row">
                                                <label for="#" class="ui-checkbox mt-1">
                                                    <input asp-for="RememberMe" type="checkbox" value="true" id="remember">
                                                    <span class="ui-checkbox-check"></span>
                                                </label>
                                                <label for="remember" class="remember-me mr-0">مرا به خاطر بسپار</label>
                                            </div>
                                            <div class="form-row-account">
                                                <button class="btn btn-primary btn-login"> ورود به هگز مارکت </button>
                                            </div>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </section>
            </div>
        </div>
    </div>
    <!-- scroll_Progress------------------------->
    <div class="progress-wrap">
        <svg class="progress-circle svg-content" width="100%" height="100%" viewBox="-1 -1 102 102">
            <path d="M50,1 a49,49 0 0,1 0,98 a49,49 0 0,1 0,-98" />
        </svg>
    </div>
    <!-- scroll_Progress------------------------->

</body>

<script src="~/js/vendor/jquery-3.2.1.min.js"></script>
<script src="~/js/vendor/bootstrap.js"></script>

<script src="~/js/vendor/owl.carousel.min.js"></script>
<script src="~/js/vendor/jquery.countdown.js"></script>
<script src="~/js/vendor/ResizeSensor.min.js"></script>
<script src="~/js/vendor/theia-sticky-sidebar.min.js"></script>
<script src="~/js/vendor/wNumb.js"></script>
<script src="~/js/vendor/nouislider.min.js"></script>

<script src="~/js/main.js"></script>

@{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
</html>

