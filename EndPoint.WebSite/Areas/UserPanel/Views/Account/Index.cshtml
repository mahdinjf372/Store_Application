
@model EndPoint.WebSite.Areas.UserPanel.Models.Account.Index.UserPanelViewModel
@{
    ViewData["Title"] = "پروفایل | فروشگاه اینترنتی هگز مارکت";
    Layout = "_UserPanelLayout";
}

<div class="col-lg-9 col-md-9 col-xs-12 pl">
    <div class="profile-content">
        <div class="profile-stats">
            <table class="table table-profile">
                <tbody>
                    <tr>
                        <td class="w-50">
                            <div class="title d-inline-block">نام :</div>
                            <div class="value d-inline-block">@Model.FullName</div>
                        </td>
                        <td>
                            <div class="title d-inline-block">نام کاربری:</div>
                            <div class="value d-inline-block">@Model.Username</div>
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <div class="title d-inline-block">شماره تلفن همراه:</div>
                            <div class="value d-inline-block">@Model.Phone</div>
                        </td>
                        <td>
                            <div class="title d-inline-block">پست الکترونیک :</div>
                            <div class="value d-inline-block">@Model.Email</div>
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <div class="title d-inline-block">سن:</div>
                            <div class="value d-inline-block">@Model.age</div>
                        </td>
                        <td>
                            <div class="title d-inline-block">تاریخ عضویت:</div>
                            <div class="value d-inline-block">@Model.RegisterDate</div>
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <div class="title d-inline-block">آدرس:</div>
                            <div class="value d-inline-block">@Model.Address</div>
                        </td>
                    </tr>

                </tbody>
            </table>
            <div class="profile">
                <ul class="mb-0">
                    <li class="profile-item">
                        <div class="title">نام :</div>
                        <div class="value">@Model.FullName</div>
                    </li>
                    <li class="profile-item">
                        <div class="title">نام کاربری :</div>
                        <div class="value">@Model.Username</div>
                    </li>
                    <li class="profile-item">
                        <div class="title">پست الکترونیک :</div>
                        <div class="value">@Model.Email</div>
                    </li>
                    <li class="profile-item">
                        <div class="title">شماره تلفن همراه:</div>
                        <div class="value">@Model.Phone</div>
                    </li>
                    <li class="profile-item">
                        <div class="title">سن:</div>
                        <div class="value">@Model.age</div>
                    </li>
                    <li class="profile-item">
                        <div class="title">آدرس:</div>
                        <div class="value">@Model.Address</div>
                    </li>
                    <li class="profile-item">
                        <div class="title">تاریخ عضویت:</div>
                        <div class="value">@Model.RegisterDate</div>
                    </li>
                </ul>
            </div>
            <div class="profile-edit-action">
                <a asp-area="UserPanel" asp-controller="Account" asp-action="EditAccountInformation" class="link-spoiler-edit btn btn-info ml-4">ویرایش اطلاعات</a>
                <a asp-area="UserPanel" asp-controller="Account" asp-action="ChangePassword" class="link-spoiler-edit btn btn-secondary">تغییر رمز عبور</a>
            </div>

        </div>
    </div>
</div>
