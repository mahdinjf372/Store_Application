@using EndPoint.WebSite.Areas.Admin.Models.Category.LoadCategories
@model List<CategoryViewModel>

<table class="table table-responsive-sm text-center">
    <thead>
        <tr>
            <th>نام دسته بندی</th>
            <th>افزودن گروه و زیر گروه</th>
            <th>ویرایش</th>
        </tr>
    </thead>
    <tbody>

        @if (Model.Any())
        {
            foreach (var cat in Model)
            {
                if (cat.isRemoved)
                {
                    <tr class="bg-red bg-lighten-4" id="row-category-data@(cat.Id)">
                        <td>@cat.Title</td>
                        <td>
                            <a title="ویرایش زیرگروه ها">
                                <i class="fa fa-dot-circle-o darken-1 font-medium-1 mr-1"></i>
                            </a>
                        </td>
                        <td>
                            <a class="darken-1 p-0" title="ویرایش نام">
                                <i class="fa fa-pencil font-medium-3 mr-2"></i>
                            </a>

                            <a class="darken-1 p-0" title="غیرفعال(حذف) کردن دسته بندی">
                                <i class="fa fa-times font-medium-3 mr-2"></i>
                            </a>

                        </td>
                    </tr>
                }
                else
                {
                    <tr id="row-category-data@(cat.Id)">
                        <td>@cat.Title</td>
                        <td>
                            <a onclick="ShowEditSubCategoriesModal('@cat.Title', @cat.Id)" title="ویرایش زیرگروه ها">
                                <i class="fa fa-dot-circle-o success font-medium-1 mr-1"></i>
                            </a>
                        </td>
                        <td>
                            <a onclick="ShowEditCategoryModal('@cat.Title', @cat.Id)" class="success p-0" title="ویرایش نام">
                                <i class="fa fa-pencil font-medium-3 mr-2"></i>
                            </a>

                            <a onclick="RemoveCategory(@cat.Id,'@cat.Title',false)" class="danger p-0" title="غیرفعال(حذف) کردن دسته بندی">
                                <i class="fa fa-times font-medium-3 mr-2"></i>
                            </a>
                        </td>
                    </tr>
                }


            }
        }
        else
        {
            <tr>
                <td colspan="3">
                    هیچ دسته بندی یافت نشد!
                </td>
            </tr>
        }

    </tbody>
</table>