
<section id="extended">
    <div class="row">
        <div class="col-sm-12">
            <div class="card">
                <div class="card-header">
                    <div class="card-title-wrap bar-success">
                        <h4 class="card-title">تبلیغات</h4>
                    </div>
                </div>
                <div class="container">
                    <div class="row mb-2">
                        <div class="col-12">
                            <img class="col-12" src="/images/adplacement/SiteAdsMap.jpg" />
                        </div>
                    </div>
                    <hr />
                    <div class="row">
                        <div class="col-md-6">
                            <input value="@ViewBag.take" id="take" type="hidden" />
                            <input value="@ViewBag.page" id="page-number" type="hidden" />
                            <input type="button" onclick="ShowCreateModal()" class="btn btn-info col-6 col-sm-4 col-md-4 col-lg-5" value="ایجاد بنر جدید" />
                        </div>
                    </div>
                </div>
                <div class="card-body">
                    <div class="card-block" id="dt-Ads">

                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts
{

    <link href="~/Sweetalert2/sweetalert2.min.css" rel="stylesheet" />
    <script src="~/Sweetalert2/sweetalert2.min.js"></script>
    <script src="~/Admin/js/siteJs/Advertising.js"></script>
}

@section Modals
{
    <partial name="_CreateModal" />
    <partial name="_EditModal" />
}

@section ModalScript
{
    <link href="~/Admin/lib/PersianCalender/kamadatepicker.min.css" rel="stylesheet" />
    <script src="~/Admin/lib/PersianCalender/kamadatepicker.min.js"></script>
    <script src="~/Admin/js/siteJs/Advertising-Modal.js"></script>
}
