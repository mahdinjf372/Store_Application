@using EndPoint.WebSite.Areas.Admin.Models.Comment.LoadComments;
@model RequestLoadCommentsViewModel
@{
    ViewData["Title"] = "مديريت نظرات";
}
<section>
    <div class="row">
        <div class="col-sm-12">
            <div class="card">
                <div class="card-header">
                    <div class="card-title-wrap bar-success">
                        <h4 class="card-title">نظرات</h4>
                    </div>
                </div>
                <div class="container">
                    <div class="row">

                        <input value="@ViewBag.page" id="page-number" type="hidden" />
                        <input value="@ViewBag.take" id="take" type="hidden" />
                        @*<input value="@ViewBag.commentId" id="commentId" type="hidden" />
                            <input value="@ViewBag.userId" id="userId" type="hidden" />
                            <input value="@ViewBag.productId" id="productId" type="hidden" />
                            <input value="@ViewBag.confirmed" id="confirmed" type="hidden" />
                            <input value="@ViewBag.fromDate" id="fromDate" type="hidden" />*@

                        <div class="float-left col-12">
                            <div class="position-relative has-icon-right">
                                <div class="row">

                                    <div class="form-group col-6 col-sm-4 col-md-2">
                                        <label for="filter-commentId" class="font-small-3">کد کامنت</label>
                                        <div class="controls">
                                            <div class="input-group">
                                                <input id="filter-commentId" onkeypress="onEnter(event)" asp-for="CommentId" type="number" class="form-control form-control-sm" required="" aria-invalid="false">
                                            </div>
                                            <div class="help-block"></div>
                                        </div>
                                    </div>


                                    <div class="form-group col-6 col-sm-4 col-md-2">
                                        <label for="filter-productId" class="font-small-3">کد محصول</label>
                                        <div class="controls">
                                            <div class="input-group">
                                                <input id="filter-productId" onkeypress="onEnter(event)" asp-for="ProductId" type="number" class="form-control form-control-sm" required="" aria-invalid="false">
                                            </div>
                                            <div class="help-block"></div>
                                        </div>
                                    </div>

                                    <div class="form-group col-6 col-sm-4 col-md-2">
                                        <label for="filter-userId" class="font-small-3">کد کاربر</label>
                                        <div class="controls">
                                            <div class="input-group">
                                                <input id="filter-userId" onkeypress="onEnter(event)" asp-for="UserId" type="number" class="form-control form-control-sm" required="" aria-invalid="false">
                                            </div>
                                            <div class="help-block"></div>
                                        </div>
                                    </div>

                                    <div class="form-group col-6 col-sm-4 col-md-2">
                                        <label for="filter-status" class="font-small-3">وضعیت</label>
                                        <div class="controls">
                                            <div class="input-group">
                                                <select onkeypress="onEnter(event)" asp-for="Status" id="filter-status" class="form-control form-control-sm">
                                                    <option value="0">وضعیت</option>
                                                    <option value="1">تایید شده</option>
                                                    <option value="2">رد شده</option>
                                                </select>
                                            </div>
                                            <div class="help-block"></div>
                                        </div>
                                    </div>

                                    <div class="form-group col-6 col-sm-4 col-md-2">
                                        <label for="filter-fromDate" class="font-small-3">از تاریخ</label>
                                        <div class="controls">
                                            <div class="input-group">
                                                <input id="filter-fromDate" onkeypress="onEnter(event)" asp-for="FromDate" type="text" class="form-control form-control-sm">
                                            </div>
                                            <div class="help-block"></div>
                                        </div>
                                    </div>

                                    <div class="form-group col-6 col-sm-4 col-md-2">
                                        <label for="filter-toDate" class="font-small-3">تا تاریخ</label>
                                        <div class="controls">
                                            <div class="input-group">
                                                <input id="filter-toDate" onkeypress="onEnter(event)" asp-for="ToDate" type="text" class="form-control form-control-sm">
                                            </div>
                                            <div class="help-block"></div>
                                        </div>
                                    </div>

                                </div>
                                <div class="row float-left">
                                    <div class="col-4 col-sm-2 ">
                                        <button onclick="ApplyFilters()" type="button" class="btn btn-success">
                                            <i class="icon-note"></i> اعمال فیلترها
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>

                    </div>

                </div>
                <div class="card-body">
                    <div class="card-block" id="dt-CommentsData">

                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts
{
    <link href="~/Sweetalert2/sweetalert2.min.css" rel="stylesheet" />
    <script src="~/Sweetalert2/sweetalert2.min.js"></script>
    <link href="~/Admin/lib/PersianCalender/kamadatepicker.min.css" rel="stylesheet" />
    <script src="~/Admin/lib/PersianCalender/kamadatepicker.min.js"></script>
    <script src="~/Admin/js/siteJs/Comments.js"></script>

    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
